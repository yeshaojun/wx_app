.post-container {
  /* display: flex;
  flex-direction: columns;  */
  margin-top: 20rpx;
  margin-bottom:40rpx;
  background-color: #fff;
  padding-bottom: 10px; 
  width:100%;
  border-bottom: 1px solid #ededed;
}
.post-author-date {
  /* flex-direction: row; */
  /* margin-top: 10rpx; */
  margin:10rpx 0rpx 20rpx 10rpx;
}
.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
}
.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10px;
}
.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-top:10px;
  margin-bottom: 10px;
}
.post-content {
  display: inline-block;
  color: #666;
  font-size: 28rpx;
  /* margin-bottom: 20rpx;
  margin-left: 20rpx; */
  padding:0 20rpx 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image {
  height: 16px;
  width: 16px;
  vertical-align: middle;
}
.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}